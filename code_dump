test = Scoreboard(9, 30, 2017)
sb = test.game_header()

def schedule(df):
    text = ''
    for index, row in df.iterrows():
        text += str(row['VISITOR_TEAM_ID']) +  ' at ' + str(row['HOME_TEAM_ID']) + ' -- ' + row['GAME_STATUS_TEXT'] +'\n'
    if text == '':
        return 'no'
    else:
        return text

print(schedule(sb))

